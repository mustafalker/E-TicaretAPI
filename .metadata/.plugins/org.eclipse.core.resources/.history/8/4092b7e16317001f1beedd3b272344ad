package com.example.ETicaretAPI.RestApi;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import com.example.ETicaretAPI.BLL.IETicaretProductServiceBLL;
import com.example.ETicaretAPI.Entities.Product_Dependency.Product;

@RestController
@RequestMapping("/api")
public class ETicaretProductsController {

    private final IETicaretProductServiceBLL productServiceBLL;

    @Autowired
    public ETicaretProductsController(IETicaretProductServiceBLL productService) {
        this.productServiceBLL = productService;
    }

    @GetMapping("/products")
    public List<Product> getAllProducts() {
        return productServiceBLL.getAll();
    }

    @GetMapping("/products/{id}")
    public Product getProductById(@PathVariable int id) {
        return productServiceBLL.getById(id);
    }

    @PostMapping("/products")
    public void addProduct(@RequestBody Product product) {
        productServiceBLL.add(product);
    }

    @PutMapping("/products/{id}")
    public void updateProduct(@PathVariable int id, @RequestBody Product product) {
        Product existingProduct = productServiceBLL.getById(id);
        if (existingProduct != null) {
            product.setProductId(id);
            productServiceBLL.update(product);
        }
    }

    @DeleteMapping("/products/{id}")
    public void deleteProduct(@PathVariable int id) {
        Product existingProduct = productServiceBLL.getById(id);
        if (existingProduct != null) {
            productServiceBLL.delete(existingProduct);
        }
    }
}
