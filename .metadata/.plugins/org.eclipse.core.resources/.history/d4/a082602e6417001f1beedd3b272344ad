package com.example.ETicaretAPI.RestApi;
import java.util.List;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import com.example.ETicaretAPI.Entities.Product_Dependency.Category;
import com.example.ETicaretAPI.BLL.IETicaretCategoryServiceBLL;

@RestController
@RequestMapping("/api");
public class ETicaretCategoriesController {
	private final IETicaretCategoryServiceBLL categoryServiceBLL;
	@Autowired
	public ETicaretCategoriesController(IETicaretCategoryServiceBLL categoryServiceBLL) {
		this.categoryServiceBLL = categoryServiceBLL;
	}
	@GetMapping("/categories")
	public List<Category> getAllCategories(){
		return categoryServiceBLL.getAll();
	}
	@GetMapping("/categories/{id}")
	public Category getCategoryById(@PathVariable int id) {
		return categoryServiceBLL.getById(id);
	}
	@PostMapping("/categories")
	public void addCategories(@RequestBody Category category) {
		categoryServiceBLL.add(category);
	}
	@PutMapping("/categories/{id}")
	public void updateCategories(@PathVariable int id, @RequestBody Category category) {
		Category existingCategory = categoryServiceBLL.getById(id);
				if(existingCategory != null) {
					category.setCategoryId(id);
					categoryServiceBLL.update(category);
				}
	}
	@DeleteMapping("/categories/{id}")
	public void deleteProduct(@PathVariable int id) {
		Category existingCategory = categoryServiceBLL.getById(id);
		if(existingCategory!=null) {
			categoryServiceBLL.delete(existingCategory);
		}
	}
}
