package com.example.ETicaretAPI.RestApi;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import com.example.ETicaretAPI.BLL.IETicaretOrderServiceBLL;
import com.example.ETicaretAPI.Entities.User_Dependency.Order;

@RestController
@RequestMapping("/api/orders")
public class ETicaretOrdersController {

    private final IETicaretOrderServiceBLL orderServiceBLL;

    @Autowired
    public ETicaretOrdersController(IETicaretOrderServiceBLL orderServiceBLL) {
        this.orderServiceBLL = orderServiceBLL;
    }

    @GetMapping
    public List<Order> getAllOrders() {
        return orderServiceBLL.getAll();
    }

    @GetMapping("/{id}")
    public Order getOrderById(@PathVariable int id) {
        return orderServiceBLL.getById(id);
    }

    @PostMapping
    public void addOrder(@RequestBody Order order) {
        orderServiceBLL.add(order);
    }

    @PutMapping("/{id}")
    public void updateOrder(@PathVariable int id, @RequestBody Order order) {
        Order existingOrder = orderServiceBLL.getById(id);
        if (existingOrder != null) {
            order.setOrderId(id);
            orderServiceBLL.update(order);
        }
    }

    @DeleteMapping("/{id}")
    public void deleteOrder(@PathVariable int id) {
        Order existingOrder = orderServiceBLL.getById(id);
        if (existingOrder != null) {
            orderServiceBLL.delete(existingOrder);
        }
    }
}
